                                <% } else { %>
                                <input type="text" class="form-control" placeholder="Suppler Number" id="suppler_number"
                                    name="suppler_number">
                                <%} %>

                            </div>
                        </div>


                        <% if(update){ %>
                        <input type="hidden" name="update" value="true">

                        <% } else { %>

                        <input type="hidden" name="update" value="false">
                        <%} %>
