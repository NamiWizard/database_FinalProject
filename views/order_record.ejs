                                <th scope="col">訂貨日期</th>
                                <th scope="col">預計遞交日期</th>
                                <th scope="col">實際遞交日期</th>
                                <th scope="col">訂貨品名</th>
                                <th scope="col">單位</th>
                                <th scope="col">數量</th>
                                <th scope="col">單價</th>
                                <th scope="col">訂貨金額</th>
                                <th scope="col">供應商名稱</th>
                                <th scope="col">供應商編號</th>
                                <th scope="col"></th>
                                <!--         <th scope="col"></th>                  -->

                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0 ; order_record.length>i;i++){ %>
                            <th scope="row"><%- i+1 %></th>
